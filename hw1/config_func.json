{
    "name": "DNN-2",
    "n_gpu": 1,
    
    "arch": {
        "type": "DNN-2",
        "args": {}
    },
    "data_loader": {
        "type": "CsvDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 256,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "L2_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 32,
        
        "tensorboardX": false,
        "log_dir": "saved/runs"
    }
}
